@model IEnumerable<Inventario2.Models.Producto>

@{
    ViewBag.Title = "Index";
}

<h2>Catalogo productos</h2>

<p>
    @Html.ActionLink("Agregar nuevo producto", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Prod_Uni)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prod_Precio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prod_Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prod_Descripcion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Prod_Uni)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Prod_Precio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Prod_Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Prod_Descripcion)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Prod_Id }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.Prod_Id }) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.Prod_Id })
        </td>
    </tr>
}

</table>
